<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="@string/pref_emer_contact"
            android:key="pref_key_emer_contact">
        <EditTextPreference
                android:key="pref_key_emer_num"
                android:summary="@string/pref_summary_emer_num"
                android:title="@string/pref_title_emer_num"
                android:inputType="number"
                android:maxLength="12"
                />
        <EditTextPreference
                android:key="pref_key_emer_text"
                android:summary="@string/pref_summary_emer_text"
                android:title="@string/pref_title_emer_text"
                />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_unlock_contact"
        android:key="pref_key_unlock">
        <fr.ihm.secureme.preferences.KeyPadPreference
                android:key="pref_app_code"
                android:summary="@string/pref_summary_code_text"
                android:title="@string/pref_title_code_text"
                android:icon="@drawable/ic_dialpad_black_24dp"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/pref_alarm"
            android:key="pref_key_alarm">
        <fr.ihm.secureme.preferences.NumberPickerPreference
                android:key="pref_time_alarm"
                android:summary="@string/pref_summary_time_alarm"
                android:title="@string/pref_title_time_alarm"/>
    </PreferenceCategory>
</PreferenceScreen>