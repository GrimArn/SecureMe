<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:weightSum="2">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mvtbutton"
                    android:src="@drawable/ic_screen_rotation_white_48dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/trigger_button" android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp">
                </ImageButton>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/simbutton"
                    android:src="@drawable/ic_no_sim_white_48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/trigger_button"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" android:weightSum="2">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cablebutton"
                    android:src="@drawable/ic_cable_off"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/trigger_button"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp" />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distbutton"
                        android:src="@drawable/ic_location_off_white_48dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:alpha="120"
                        android:adjustViewBounds="false"
                        android:layout_weight="1"
                        android:background="@drawable/trigger_button" android:layout_marginRight="5dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp" />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>