<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:weightSum="2" android:paddingBottom="15dp">
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mvt"
                        android:layout_weight="1" android:layout_marginRight="5dp" android:layout_marginLeft="5dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:gravity="center_horizontal"
                                >
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent" android:gravity="center_horizontal"
                                    android:background="@color/ColorPrimaryLight" android:paddingTop="5dp"
                                    android:paddingBottom="5dp">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/mvt_icon"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentTop="true"
                                        android:src="@drawable/ic_screen_rotation_white_48dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/mvt_text"
                                        android:layout_alignParentTop="true"
                                        android:textSize="15sp"
                                        android:text="@string/mouvement"
                                        android:textAlignment="center" android:textColor="@color/white"/>

                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent" android:layout_marginTop="5dp">
                                    <ImageButton
                                            style="?android:attr/borderlessButtonStyle"
                                            android:textColor="@color/colorAccent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                        android:id="@+id/button" android:textSize="10sp" android:layout_gravity="left"
                                        android:src="@drawable/ic_settings_white_24dp" />

                                    <Switch
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/switch1"
                                        android:layout_gravity="right"
                                        android:paddingRight="10dp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sim"
                        android:layout_weight="1" android:layout_marginRight="5dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:gravity="center_horizontal"
                                >
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent" android:gravity="center_horizontal"
                                    android:background="@color/ColorPrimaryLight" android:paddingTop="5dp"
                                    android:paddingBottom="5dp">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/sim_icon"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentTop="true"
                                        android:src="@drawable/ic_no_sim_white_48dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/sim_text"
                                        android:layout_alignParentTop="true"
                                        android:textSize="15sp"
                                        android:text="@string/sim"
                                        android:textAlignment="center" android:textColor="@color/white"/>

                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent" android:layout_marginTop="5dp">
                                    <ImageButton
                                            style="?android:attr/borderlessButtonStyle"
                                            android:textColor="@color/colorAccent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="En savoir +"
                                            android:id="@+id/buttonsav" android:textSize="10sp" android:layout_gravity="left"
                                        android:src="@drawable/ic_settings_white_24dp" />

                                    <Switch
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/switch2"
                                        android:paddingRight="10dp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" android:weightSum="2">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cablebutton"
                    android:src="@drawable/ic_cable_off"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/trigger_button"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/distbutton"
                        android:src="@drawable/ic_location_off_white_48dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:alpha="120"
                        android:adjustViewBounds="false"
                        android:layout_weight="1"
                        android:background="@drawable/trigger_button" android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>